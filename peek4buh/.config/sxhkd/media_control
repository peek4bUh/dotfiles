# Previous track
XF86AudioPrev
	playerctl previous

# Next track
XF86AudioNext
	playerctl next

# Play/Pause
XF86AudioPlay
	playerctl play-pause

# Volume Down
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -2% && \
	notify-send "ğŸ”‰ Volume: $(pactl get-sink-volume @DEFAULT_SINK@ | grep -oP '[0-9]+(?=%)' | head -1)%"

# Volume Up
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +2% && \
	notify-send "ğŸ”Š Volume: $(pactl get-sink-volume @DEFAULT_SINK@ | grep -oP '[0-9]+(?=%)' | head -1)%"

# Mute/Unmute sound
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle && \
	notify-send "ğŸ”‡ Muted"

